{
  "manifest_version": 2,
  "name": "Context Plus",
  "version": "0.2.0",

  "applications": {
    "gecko": {
      "strict_min_version": "53.0a1"
    }
  },

  "description": "Add a bunch of extra stuff to contextual identity features",

  "icons": {
    "48": "icons/border-48.png"
  },

  "background": {
    "scripts": ["contextPlus.js"]
  },

  "permissions": [
    "contextMenus",
    "contextualIdentities",
    "cookies",
    "tabs"
  ]
}
